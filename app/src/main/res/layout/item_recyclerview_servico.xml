<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/servicoCardView"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:layout_height="80dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/nome"
            android:textColor="@color/YellowGreen"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itemTempoEstimado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/tempo_estimado"
            android:textColor="@color/colorPreto1"
            android:textSize="@dimen/com_facebook_share_button_padding_bottom" />

        <TextView
            android:id="@+id/itemValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/valor"
            android:textColor="@color/colorPreto1"
            android:paddingRight="16px"
            android:textSize="@dimen/com_facebook_share_button_compound_drawable_padding" />

    </LinearLayout>

</android.support.v7.widget.CardView>